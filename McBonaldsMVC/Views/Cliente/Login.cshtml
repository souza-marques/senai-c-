<main>
        <h2>Login</h2>
        <form method="POST" action='@Url.Action("Login","Cliente")'>

            <div>
                <label for="email">E-mail</label>
                <br />
                <input id="email" type="email" />
            </div>

            <div>
                <label for="senha">Senha</label>
                <br />
                <input id="senha" type="password" />
            </div>

            <input type="submit" value="Entrar!" />

            <div id="link-cadstro">
                <a href='@Url.Action("Index", "Cadastro")'> Quero me cadastrar!</a>
            </div>
        </form>

    </main>
    